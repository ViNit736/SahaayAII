{
  "manifest_version": 3,
  "name": "Legal Guardian",
  "version": "1.0",
  "description": "AI-powered protection against unfair terms",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Legal Guardian"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}